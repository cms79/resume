        <MudText Typo="Typo.h2">Christopher Shaw</MudText>
        <MudStack Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h6" Align="Align.Center">Consultant</MudText>
